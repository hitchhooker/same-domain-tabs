{
  "name": "Manage Tabs by Domain (MV3)",
  "short_name": "Manage Tabs (MV3)",
  "description": "Close and gather same-domain tabs.",
  "version": "0.0.5",
  "manifest_version": 3,
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "gather-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Gather same-domain tabs around active tab."
    },
    "close-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Close same-domain tabs as active tab."
    },
    "gather-tabs-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Gather all same-domain tabs."
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  }
}
